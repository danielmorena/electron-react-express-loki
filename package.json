{
  "name": "electron-react-express-loki",
  "version": "0.0.1",
  "private": true,
  "description": "A minimal user CRUD Electron application with Express API, LokiJS database and ReactJS",
  "keywords": [
    "Electron",
    "ExpressJS",
    "LokiJS",
    "ReactJS"
  ],
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "electron-is-dev": "^0.3.0",
    "express": "^4.16.2",
    "lokijs": "^1.5.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "electron": "^1.7.11",
    "electron-builder": "^19.55.3",
    "react-scripts": "^1.1.0",
    "wait-on": "^2.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "build --em.main=build/electron.js",
    "preelectron-pack": "yarn build"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "author": {
    "email": "krystian.koper@gmail.com",
    "name": "Krystian Koper",
    "url": "https://github.com/krystiankoper"
  },
  "build": {
    "appId": "com.krystiankoper.electron-react-express-loki",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
